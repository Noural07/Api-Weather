@model Weather.Models.WeatherD.Root
@{
    ViewData["Title"] = "Weather Information";
}

<style>
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f5f5f5;
        border-radius: 10px;
    }

    .weather-card {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    h2 {
        text-align: center;
        color: #333;
    }

    h3 {
        margin-top: 20px;
        color: #555;
    }

    .coordinates {
        font-weight: bold;
    }

    .weather-details p,
    .wind-details p,
    .other-details p,
    .sun-details p {
        margin: 5px 0;
    }

    .other-details p {
        font-weight: bold;
    }
</style>

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="weather-card">
        <h3>Location: @Model.name, @Model.sys.country</h3>
        <div class="coordinates">
            <p>Latitude: @Model.coord.lat</p>
            <p>Longitude: @Model.coord.lon</p>
        </div>

        <h3>Weather Information</h3>
        <div class="weather-details">
            <p>Weather: @Model.weather[0].main - @Model.weather[0].description</p>
            <p>Temperature: @Model.main.temp &deg;C</p>
            <p>Feels Like: @Model.main.feels_like &deg;C</p>
            <p>Min Temperature: @Model.main.temp_min &deg;C</p>
            <p>Max Temperature: @Model.main.temp_max &deg;C</p>
            <p>Pressure: @Model.main.pressure hPa</p>
            <p>Humidity: @Model.main.humidity%</p>
        </div>

        <h3>Wind Information</h3>
        <div class="wind-details">
            <p>Wind Speed: @Model.wind.speed m/s</p>
            <p>Wind Direction: @Model.wind.deg&deg;</p>
        </div>

        <h3>Other Information</h3>
        <div class="other-details">
            <p>Visibility: @Model.visibility</p>
            <p>Cloudiness: @Model.clouds.all%</p>
            <p>Timestamp: @Model.dt</p>
            <p>Timezone: @Model.timezone</p>
            <p>ID: @Model.id</p>
            <p>Cod: @Model.cod</p>
        </div>

        <h3>Sunrise and Sunset</h3>
        <div class="sun-details">
            <p>Sunrise: @Model.sys.sunrise</p>
            <p>Sunset: @Model.sys.sunset</p>
        </div>
    </div>
</div>
